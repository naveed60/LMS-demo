<div class="container my-5" style="max-width: 700px;">
  <div class="card shadow border-0 rounded-4 overflow-hidden">

    <!-- Card Header -->
    <div class="card-header text-white" style="background-color:#6f42c1;">
      <h3 class="mb-0 fw-bold">
        <i class="bi bi-person-badge-fill me-2"></i> Teacher Profile
      </h3>
    </div>

    <!-- Card Body -->
    <div class="card-body bg-light">

      <!-- Info Table -->
      <table class="table table-borderless mb-4">
        <tbody>
          <tr>
            <th class="text-muted">ID</th>
            <td><%= @teacher.id %></td>
          </tr>
          <tr>
            <th class="text-muted">Name</th>
            <td><%= @teacher.name %></td>
          </tr>
          <tr>
            <th class="text-muted">Email</th>
            <td><%= @teacher.email %></td>
          </tr>
          <tr>
            <th class="text-muted">Father Name</th>
            <td><%= @teacher.father_name %></td>
          </tr>
          <tr>
            <th class="text-muted">Phone</th>
            <td><%= @teacher.phone_number %></td>
          </tr>
          <tr>
            <th class="text-muted">Date of Birth</th>
            <td><%= @teacher.dob %></td>
          </tr>
          <tr>
            <th class="text-muted align-top">Expertise</th>
            <td>
              <% if @teacher.courses.any? %>
                <% @teacher.courses.each do |course| %>
                  <span class="badge rounded-pill text-bg-secondary me-1 mb-1">
                    <%= course.name %>
                  </span>
                <% end %>
              <% else %>
                <span class="text-muted">No courses assigned</span>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>

      <!-- Action Buttons -->
      <div class="d-flex justify-content-center gap-2">
        <%= link_to edit_admin_teacher_path(@teacher), class: "btn btn-warning rounded-pill px-4" do %>
          <i class="bi bi-pencil-square me-1"></i> Edit
        <% end %>

        <%= link_to admin_teacher_path(@teacher),
              data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
              class: "btn btn-danger rounded-pill px-4" do %>
          <i class="bi bi-trash me-1"></i> Delete
        <% end %>

        <%= link_to admin_teachers_path, class: "btn btn-outline-secondary rounded-pill px-4" do %>
          <i class="bi bi-arrow-left-circle me-1"></i> Back
        <% end %>
      </div>
    </div>
  </div>
</div>
