<div class="container py-4">
  <h2 class="text-center mb-4">Add Teacher</h2>

  <div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-5">
      <div class="card border-0 shadow-sm rounded-4 bg-light">
        <div class="card-body p-4">
          <h3 class="h5 text-primary fw-bold text-center mb-3">Add Teacher</h3>

          <%= form_for [:admin, teacher] do |f| %>
            <% if teacher.errors.any? %>
              <div class="alert alert-danger" role="alert">
                <div class="fw-semibold mb-1"><%= pluralize(teacher.errors.count, "error") %> prohibited this teacher from being saved:</div>
                <ul class="mb-0 ps-3">
                  <% teacher.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <!-- Name -->
            <div class="mb-3">
              <label class="form-label text-center w-100 fw-semibold">Name</label>
              <%= f.text_field :name, class: "form-control rounded-3 shadow-sm" %>
            </div>

            <!-- Father Name -->
            <div class="mb-3">
              <label class="form-label text-center w-100 fw-semibold">Father Name</label>
              <%= f.text_field :father_name, class: "form-control rounded-3 shadow-sm" %>
            </div>

            <!-- Email -->
            <div class="mb-3">
              <label class="form-label text-center w-100 fw-semibold">Email</label>
              <%= f.email_field :email, class: "form-control rounded-3 shadow-sm", autocomplete: "email" %>
            </div>

            <!-- Phone Number -->
            <div class="mb-3">
              <label class="form-label text-center w-100 fw-semibold">Phone Number</label>
              <%= f.telephone_field :phone_number, class: "form-control rounded-3 shadow-sm" %>
            </div>

            <!-- Password -->
            <div class="mb-3">
              <label class="form-label text-center w-100 fw-semibold">Password</label>
              <%= f.password_field :password, class: "form-control rounded-3 shadow-sm" %>
              <% if @minimum_password_length %>
                <div class="form-text text-center"><%= @minimum_password_length %> characters minimum</div>
              <% end %>
            </div>

            <!-- Confirm Password -->
            <div class="mb-3">
              <label class="form-label text-center w-100 fw-semibold">Confirm Password</label>
              <%= f.password_field :password_confirmation, class: "form-control rounded-3 shadow-sm" %>
            </div>

            <!-- Date of Birth -->
            <div class="mb-3">
              <label class="form-label text-center w-100 fw-semibold">Date of Birth</label>
              <%= f.date_field :dob, class: "form-control rounded-3 shadow-sm" %>
            </div>

            <!-- Address -->
            <div class="mb-3">
              <label class="form-label text-center w-100 fw-semibold">Address</label>
              <%= f.text_field :address, class: "form-control rounded-3 shadow-sm" %>
            </div>

            <!-- Expertise (courses multi-select) -->
            <div class="mb-4">
              <label class="form-label text-center w-100 fw-semibold">Expertise</label>
              <%= f.collection_select :course_ids, Course.all, :id, :name, {}, { class: "form-select rounded-3 shadow-sm", multiple: true } %>
              <div class="form-text text-center">Hold Ctrl (Windows) or âŒ˜ (Mac) to select multiple.</div>
            </div>

            <!-- Actions -->
            <div class="d-flex justify-content-center gap-2">
              <%= f.submit "Add", class: "btn btn-primary rounded-pill px-4" %>
              <%= link_to "Cancel", admin_dashboard_index_path, class: "btn btn-outline-primary rounded-pill px-4" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
