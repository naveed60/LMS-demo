<div class="container py-5">
  <div class="card shadow border-0 mx-auto" style="max-width:600px;">
    <!-- Card Header -->
    <div class="card-header text-white py-3" style="background-color:#6f42c1; border-top-left-radius:0.5rem; border-top-right-radius:0.5rem;">
      <h4 class="mb-0">
        <i class="bi bi-journal-plus me-2"></i> Add New Course
      </h4>
    </div>

    <!-- Card Body -->
    <div class="card-body" style="background-color:#f8f9fa;">
      <%= form_for [:admin, course] do |f| %>
        <%= render "shared/error", model: course %>

        <!-- Name Field -->
        <div class="mb-4">
          <%= f.label :name, class: "form-label fw-semibold" %>
          <%= f.text_field :name,
              placeholder: "Enter course name",
              autofocus: true,
              class: "form-control form-control-lg",
              style: "border-radius:50rem; padding:0.75rem 1rem; font-size:1rem;" %>
        </div>

        <!-- Course Code Field -->
        <div class="mb-4">
          <%= f.label :coursecode, "Course Code", class: "form-label fw-semibold" %>
          <%= f.text_field :coursecode,
              placeholder: "e.g. CS101",
              class: "form-control form-control-lg",
              style: "border-radius:50rem; padding:0.75rem 1rem; font-size:1rem;" %>
        </div>

        <!-- Action Buttons -->
        <div class="d-flex justify-content-end gap-2">
          <%= link_to "Cancel",
              admin_dashboard_index_path,
              class: "btn btn-outline-light",
              style: "border-radius:50rem; padding:0.5rem 1.5rem; color:#fff; border:1px solid #fff; background:none;" %>

          <%= f.submit "Add Course",
              class: "btn btn-primary",
              style: "border-radius:50rem; padding:0.5rem 1.5rem; background-color:#6f42c1; border-color:#6f42c1; color:#fff;" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
