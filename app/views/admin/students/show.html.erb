<div class="container my-5" style="max-width: 700px;">
  <div class="card shadow border-0 rounded-4 overflow-hidden">

    <!-- Card Header -->
    <div class="card-header text-white" style="background-color:#6f42c1;">
      <h3 class="mb-0 fw-bold">
        <i class="bi bi-person-circle me-2"></i> Student Profile
      </h3>
    </div>

    <!-- Card Body -->
    <div class="card-body bg-light">

      <!-- Profile Image -->
      <% if @student.image.attached? %>
        <div class="text-center mb-4">
          <%= image_tag @student.image, class: "rounded-circle shadow-sm", style: "width:150px; height:150px; object-fit:cover;" %>
        </div>
      <% end %>

      <!-- Info Table -->
      <table class="table table-borderless mb-4">
        <tbody>
          <tr>
            <th scope="row" class="text-muted">ID</th>
            <td><%= @student.id %></td>
          </tr>
          <tr>
            <th scope="row" class="text-muted">Name</th>
            <td><%= @student.name %></td>
          </tr>
          <tr>
            <th scope="row" class="text-muted">Father Name</th>
            <td><%= @student.father_name %></td>
          </tr>
          <tr>
            <th scope="row" class="text-muted">Email</th>
            <td><%= @student.email %></td>
          </tr>
          <tr>
            <th scope="row" class="text-muted">Phone</th>
            <td><%= @student.phone_number %></td>
          </tr>
          <tr>
            <th scope="row" class="text-muted">Date of Birth</th>
            <td><%= @student.dob %></td>
          </tr>
          <tr>
            <th scope="row" class="text-muted">Batch Number</th>
            <td><%= @student.batch_id %></td>
          </tr>
          <tr>
            <th scope="row" class="text-muted">Semester Type</th>
            <td><%= @student.student_semesters.last.semester.semester_type %></td>
          </tr>
          <tr>
            <th scope="row" class="text-muted">Current Semester</th>
            <td><%= @student.student_semesters.last.semester.semester_number %></td>
          </tr>
        </tbody>
      </table>

      <!-- Action Buttons -->
      <div class="d-flex justify-content-center gap-2">
        <%= link_to edit_admin_student_path(@student), class: "btn btn-warning rounded-pill px-4" do %>
          <i class="bi bi-pencil-square me-1"></i> Edit
        <% end %>

        <%= link_to admin_student_path(@student),
              data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
              class: "btn btn-danger rounded-pill px-4" do %>
          <i class="bi bi-trash me-1"></i> Delete
        <% end %>

        <%= link_to admin_students_path, class: "btn btn-outline-secondary rounded-pill px-4" do %>
          <i class="bi bi-arrow-left-circle me-1"></i> Back
        <% end %>
      </div>
    </div>
  </div>
</div>
