<div class="container my-5">
  <h2 class="mb-4 text-center fw-bold">Attendance</h2>

  <div class="table-responsive shadow-sm rounded-4 overflow-hidden">
    <table class="table table-striped table-hover mb-0 align-middle text-center"
           style="border-radius:1rem; overflow:hidden;">
      <thead style="background:linear-gradient(90deg, #6f42c1, #8e63d4); color:white;">
        <tr>
          <th scope="col">Date</th>
          <th scope="col">Course</th>
          <th scope="col">Section</th>
          <th scope="col">Semester</th>
          <th scope="col">Status</th>
        </tr>
      </thead>
      <tbody>
        <% @attendances.each do |attendance| %>
          <tr>
            <td class="fw-semibold"><%= attendance.date.strftime("%d %b %Y") %></td>
            <td><%= attendance.enrollment.section.course.name %></td>
            <td><%= attendance.enrollment.section.name %></td>
            <td><%= "#{attendance.enrollment.semester.semester_type} #{attendance.enrollment.semester.semester_number}" %></td>
            <td><%= attendance.status.titleize %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

