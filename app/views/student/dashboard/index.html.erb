<div class="container my-5">
  <div class="row g-4">

    <!-- Profile Card -->
    <div class="col-md-4">
      <div class="card shadow-sm border-0 h-100 rounded-4"
           style="background-color:#dfe4e9; transition:box-shadow 0.2s ease-in-out;">
        <div class="card-body text-center">
          <div class="display-4 mb-3">ğŸ‘¤</div>
          <h5 class="fw-bold">Profile</h5>
          <p class="text-muted small">View and update your personal information.</p>
          <%= link_to 'View Profile', show_profile_student_dashboard_index_path,
              style: "display:inline-block; background-color:transparent; border:2px solid transparent; border-radius:50rem; padding:0.5rem 1.5rem; font-weight:600; color:#0d6efd; text-decoration:none; transition:all 0.2s ease-in-out;",
