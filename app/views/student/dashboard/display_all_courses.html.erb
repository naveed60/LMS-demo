<div class="container my-5">
  <h2 class="mb-4 text-center fw-bold" style="color:#343a40;">Enrolled Courses</h2>

  <div class="table-responsive shadow-sm rounded-4 overflow-hidden" style="max-width:1100px; margin:auto;">
    <table class="table table-hover table-bordered align-middle mb-0 text-center"
           style="border-radius:1rem; overflow:hidden; background:white;">
      <thead style="background:linear-gradient(90deg, #6f42c1, #8e63d4); color:white;">
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Course</th>
          <th scope="col">Teacher Name</th>
          <th scope="col">Section</th>
          <th scope="col">Semester</th>
          <th scope="col">Semester No</th>
        </tr>
      </thead>
      <tbody>
        <% @enrollments.each do |e| %>
          <tr>
            <td class="fw-semibold"><%= e.id %></td>
            <td style="font-weight:500; color:#0d6efd;"><%= e.section.course.name %></td>
            <td><%= e.section.teacher.name %></td>
            <td><%= e.section.name %></td>
            <td><%= e.semester.semester_type %></td>
            <td><%= e.semester.semester_number %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
