<div class="container my-5">
  <h2 class="mb-4 text-center fw-bold">Enrolled Courses</h2>

  <div class="table-responsive shadow-sm rounded-4 overflow-hidden">
    <table class="table table-striped table-hover mb-0 align-middle text-center"
           style="border-radius:1rem; overflow:hidden;">
      <thead class="text-white" style="background:linear-gradient(90deg,#20c997,#0dcaf0);">
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Course</th>
          <th scope="col">Teacher Name</th>
          <th scope="col">Section</th>
          <th scope="col">Semester</th>
          <th scope="col">Semester No</th>
        </tr>
      </thead>
      <tbody>
        <% @enrollments.each do |e| %>
          <tr>
            <td class="fw-semibold"><%= e.id %></td>
            <td><%= e.section.course.name %></td>
            <td><%= e.section.teacher.name %></td>
            <td><%= e.section.name %></td>
            <td><%= e.semester.semester_type %></td>
            <td><%= e.semester.semester_number %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
